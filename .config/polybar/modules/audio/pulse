[module/pulseaudio]
type = internal/pulseaudio
interval = 5
use-ui-max = false

format-volume = %{F#7aa}%{T2}<label-volume><ramp-volume>%{T-}%{F-}
label-volume- = %percentage%%

; label-volume-foreground = ${colors.foreground}

ramp-volume-0 = " 🔈"
ramp-volume-1 = " 🔉"
ramp-volume-2 = " 🔊"
ramp-headphones-0 = "%{T2} 🎧 %{T2}"
ramp-headphones-1 = "%{T3} 🎧 %{T3}"

label-muted = 🔇 muted

label-muted-foreground = #666
; vim:syn=dosini

