; format-connected-prefix-offset = -3
; label-connected = %essid% %{T2}%{F#4aa}%local_ip%%{T-}
label-connected = %{T2}%essid% %{F#0a8}%signal%%{T-}
label-connected-foreground = ${colors.foreground-alt}

